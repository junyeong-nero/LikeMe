<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LikeMe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- No ActionBar -->
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Font Family -->
        <item name="android:fontFamily">@font/gmsans</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">#F48FB1</item>
        <item name="colorPrimaryVariant">#CE93D8</item>
        <item name="colorOnPrimary">#80CBC4</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#9FA8DA</item>
        <item name="colorSecondaryVariant">#90CAF9</item>
        <item name="colorOnSecondary">#80DEEA</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>